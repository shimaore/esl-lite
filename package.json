{
  "name": "esl-lite",
  "version": "3.1.0",
  "description": "Client for FreeSwitch Event System mod_event_socket",
  "homepage": "https://shimaore.github.io/esl-lite/",
  "keywords": [
    "freeswitch",
    "event",
    "typescript",
    "event socket",
    "mod_event_socket"
  ],
  "author": {
    "name": "St√©phane Alnet",
    "email": "stephane@shimaore.net",
    "url": "https://del.igh.tf/ul/stephane-alnet/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://g.rie.re/shimaore/esl-lite.git"
  },
  "type": "module",
  "module": "esl-lite.mjs",
  "main": "esl-lite.cjs",
  "types": "./types/src/esl-lite.d.ts",
  "files": [
    "esl-lite.cjs",
    "esl-lite.mjs",
    "./types/src/*.d.ts*"
  ],
  "exports": {
    "require": "./esl-lite.cjs",
    "import": "./esl-lite.mjs",
    "types": "./types/src/esl-lite.d.ts"
  },
  "devDependencies": {
    "@eslint/js": "9.16.0",
    "@tsconfig/node21": "21.0.3",
    "@tsconfig/strictest": "2.0.5",
    "@types/eslint__js": "8.42.3",
    "@types/node": "22.10.1",
    "@types/uuid": "10.0.0",
    "esbuild": "0.24.0",
    "eslint": "9.16.0",
    "pino": "9.5.0",
    "prettier": "3.4.2",
    "typedoc": "0.27.4",
    "typescript": "5.7.2",
    "typescript-eslint": "8.18.0",
    "uuid": "11.0.3"
  },
  "scripts": {
    "build": "node build.mjs",
    "prepublishOnly": "yarn install && yarn build && yarn syntax",
    "lint": "yarn prepublishOnly && eslint --fix src/**/*.ts && yarn postlint",
    "postlint": "prettier -w . && typedoc 'src/*.ts'",
    "syntax": "tsc",
    "test:live": "podman  build --ulimit nofile=1048576:1048576 -f test/Dockerfile ."
  },
  "publishConfig": {
    "tag": "latest"
  },
  "packageManager": "yarn@4.3.1",
  "dependencies": {
    "ulidx": "2.4.1",
    "yocto-queue": "1.1.1"
  },
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true
  }
}
